{% extends "layout.njk" %}

{% block content %}
    <div class="card">
    <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover "></section>

        <section class="details">
            <div class="item">
            <div>Nome</div>
            <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>{{ teacher.degree }}</div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>{{ "Presencial" if teacher.type == "P" else "À Distância" }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for service in teacher.subjects %}
                        <span>{{ service }}</span>
                    {% endfor%}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at}}</div>
            </div>

            <div class="botButtons">
                <a href="/teachers/{{teacher.id}}/edit" class="button" >Editar</a>
                
                <form id="form-delete" action="/teachers?_method=DELETE" method="post">
                    <input type="hidden" name="id" value={{teacher.id}}>
                    <button type="submit">Deletar</button>
                </form>
            </div>
        </section>
    </div>
{% endblock content %}