{% extends "layout.njk" %}

{% block content %}
    <div class="card">
    <section class="avatar" style="background: url({{ student.avatar_url }}) no-repeat center center / cover "></section>

        <section class="details">
            <div class="item">
            <div>Nome</div>
            <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ student.age }}</div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>{{ student.degree }}</div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>{{ "Presencial" if student.type == "P" else "À Distância" }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for service in student.subjects %}
                        <span>{{ service }}</span>
                    {% endfor%}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ student.created_at}}</div>
            </div>

            <div class="botButtons">
                <a href="/students/{{student.id}}/edit" class="button" >Editar</a>
                
                <form id="form-delete" action="/students?_method=DELETE" method="post">
                    <input type="hidden" name="id" value={{student.id}}>
                    <button type="submit">Deletar</button>
                </form>
            </div>
        </section>
    </div>
{% endblock content %}